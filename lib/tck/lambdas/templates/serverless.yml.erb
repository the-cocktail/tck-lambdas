service: service-using-<%= @lambda.name %>

provider:
  name: aws
  runtime: nodejs4.3
  stage: dev
#  region: eu-west-1
  iamRoleStatements:
    - Effect: "Allow"
      Action:
        - "ses:SendEmail"
        - "ses:SendRawEmail"
      Resource : "*"

functions:
  <%= @lambda.name %>:
    handler: handler.<%= @lambda.name %>
    events:
      - http:
          path: <%= @lambda.name %>
          method: get
